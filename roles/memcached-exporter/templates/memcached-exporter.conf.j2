description "Prometheus memcached Exporter"
start on (runlevel [345] and started network)
stop on (runlevel [!345] or stopping network)

respawn
{% if upstart_version.stdout | replace("init (upstart ", "") |replace(")","") | version_compare('1.4', '>=') %}
setuid {{ prometheus_exporters_common_user }}
setgid {{ prometheus_exporters_common_group }}
{% endif %}

script
  exec >> "{{ prometheus_exporters_common_log_dir }}/memcached-exporter.log"
  exec 2>&1
  exec /usr/local/bin/memcached_exporter {% for prometheus_memcached_exporter_collector in prometheus_memcached_exporter_enabled_collectors %}--collector.{{ prometheus_memcached_exporter_collector }} {% endfor %} {% for flag, flag_value in prometheus_memcached_exporter_config_flags.items() %}--{{ flag }}={{ flag_value }} {% endfor %}

end script
